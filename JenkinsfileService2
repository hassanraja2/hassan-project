pipeline{
        agent any
        stages{
            stage('Build Service 2'){
                steps{
                    sh "./service-2/build.sh"
                }
            }
	            stage('Push & Pull Service 2'){
                  steps{
                      sh "./service-2/push.sh"
                }
            }
	          stage('Run Service 2'){
                 steps{
                    sh "./service-2/run.sh"
                }
            }
        }    
}
